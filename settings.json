{
    "update.mode": "none",
    "breadcrumbs.enabled": false,
    "window.zoomLevel": 0,

    "files.autoSave": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "files.encoding": "utf8",
    "files.eol": "\r\n",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.ipynb_checkpoints": true
    },

    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.editor.labelFormat": "default",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "editor.fontFamily": "\"Myrica M\"",
    "editor.fontSize": 15,
    "editor.fontWeight": "normal",
    "editor.fontLigatures": false,

    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "all",
    "editor.hover.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.selectionHighlight": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.lightbulb.enabled": false,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.scrollBeyondLastLine": true,
    "editor.folding": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "editor.emptySelectionClipboard": false,
    "trailing-spaces.backgroundColor": "rgba(0,180,255,0.3)",

    "[c]": {
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 4,
        "editor.wordWrap": "off",
    },

    "python.defaultInterpreterPath": "D:\\application\\WPy64\\python-3.8.9.amd64\\python.exe",
    "[python]": {
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 4,
        "editor.wordWrap": "off",
    },

    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.print.theme": "light",
    "markdown-pdf.displayHeaderFooter": true,
    "markdown-pdf.margin.top": "1cm",
    "markdown-pdf.margin.bottom": "1cm",
    "markdown-pdf.headerTemplate": "<div></div>",
    "markdown-pdf.footerTemplate": "<div style=\"font-size: 8px; margin: 0 auto;\"> <span class='pageNumber'></span> / <span class='totalPages'></span></div>",
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.tabSize": 4,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },

    "[html]": {
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 2,
        "editor.wordWrap": "on",
        "editor.defaultFormatter": "Glavin001.unibeautify-vscode"
    },

    "css.lint.duplicateProperties": "warning",
    "css.lint.float": "warning",
    "css.lint.zeroUnits": "warning",
    "[css]": {
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 2,
        "editor.wordWrap": "on",
        "editor.defaultFormatter": "Glavin001.unibeautify-vscode"
    },

    "[haml]": {
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 2,
        "editor.wordWrap": "on",
    },

    "[sass]": {
        "files.trimTrailingWhitespace": true,
        "editor.tabSize": 2,
        "editor.wordWrap": "on"
    },

    "[plaintext]": {
        "files.trimTrailingWhitespace": false,
        "editor.tabSize": 2,
        "editor.wordWrap": "off",
    },

    "cSpell.userWords": [
        "beautifulsoup", "bing", "chdir", "choco", "cnvtime", "consolas",
        "deque", "endhaml", "favicon", "fname", "groupby", "haml", "hamlish",
        "ipynb", "islower", "isupper", "itemscope", "itertools", "jupyter",
        "khtml", "meiryo", "minkowski", "mobi", "nofollow", "noopener",
        "noreferrer", "numpy", "pycache", "scipy", "sitename", "strftime",
        "strptime", "stylesheet"
    ],
}

